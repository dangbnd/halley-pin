# Database (Vercel/production): use Postgres
# Example: postgresql://USER:PASSWORD@HOST:5432/DB?schema=public
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?schema=public"

# Cloudflare R2 (S3-compatible)
R2_ACCOUNT_ID="YOUR_CLOUDFLARE_ACCOUNT_ID"
R2_ACCESS_KEY_ID="YOUR_R2_ACCESS_KEY_ID"
R2_SECRET_ACCESS_KEY="YOUR_R2_SECRET_ACCESS_KEY"
R2_BUCKET="YOUR_BUCKET_NAME"

# Public base URL for serving images (recommended: custom domain connected to the bucket)
# Example: https://images.yourdomain.com
NEXT_PUBLIC_R2_PUBLIC_BASE_URL=""

# Optional: keep original files (default false). If false, we delete the temp incoming object after generating 2 sizes.
KEEP_ORIGINAL="false"

# Classification jobs
ENABLE_CLASSIFICATION="false"
ENABLE_LOCAL_CLIP="false"
CLASSIFY_THRESHOLD="0.22"

# Worker tuning
JOBS_POLL_INTERVAL_MS="2000"
JOBS_MAX_ATTEMPTS="3"

# Deletion
# Optional: protect single/bulk delete endpoints with a token.
# If set, client must send header: x-delete-token: <value>
PHOTO_DELETE_TOKEN=""

# Required for "Delete all" endpoint (/api/photos/delete-all)
# Client must send header: x-admin-token: <value>
ADMIN_TOKEN="change-me-to-a-strong-token"

# Admin login (single account)
ADMIN_PASSWORD="change-me"
# Long random secret for signing admin cookie (recommended >= 32 chars)
ADMIN_COOKIE_SECRET="change-me-to-a-long-random-string"
